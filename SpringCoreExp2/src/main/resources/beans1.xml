<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
	
	<bean id = "cust" class="com.test.Customer" scope="singleton" >
		
		<property name = "id" value = "001" ></property>
		<property name = "name" value = "Ishita"></property>
		<property name = "order" value="Laptop"></property>
 		<property name = "orderPrice" value="450000"></property> 
 	</bean>
 	
 	<bean id="emp1" class="com.test.Employee">
 		<constructor-arg name="id" value="002"></constructor-arg>
 	 	<constructor-arg name="name" value="Vidhan"></constructor-arg>
 	 	<constructor-arg name="order" value="Mouse"></constructor-arg>
 	 	<constructor-arg name="orderPrice" value="500"></constructor-arg>
 	
 	</bean>
 	
</beans>
 
 